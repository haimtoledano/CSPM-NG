# השתמש בגרסת slim במקום alpine למניעת בעיות תאימות עם SQLite
FROM node:20-slim

WORKDIR /app

# התקנת תלויות מערכת בסיסיות שאולי חסרות (ליתר ביטחון)
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

COPY package*.json ./

# התקנה מלאה (כולל בנייה מחדש של מודולים במידת הצורך)
RUN npm install

COPY . .

RUN mkdir -p /app/data

ENV NODE_ENV=production
ENV PORT=3001

CMD ["node", "server/server.js"]
